<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/game_background">

    <TextView
        android:id="@+id/result_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/code_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:textSize="40sp"
        android:textColor="#ffff"
        android:text="TextView"
        app:layout_constraintTop_toBottomOf="@+id/result_textview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/time_taken_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Time: "
        android:textSize="25sp"
        android:textColor="#ffff"
        app:layout_constraintStart_toStartOf="@id/code_textview"
        app:layout_constraintTop_toBottomOf="@id/code_textview" />

    <TextView
        android:id="@+id/time_taken_numberview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="3:05"
        android:textSize="25sp"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="@id/code_textview"
        app:layout_constraintTop_toBottomOf="@id/code_textview"/>

    <TextView
        android:id="@+id/tries_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Tries: "
        android:textSize="25sp"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="@id/time_taken_textview"
        app:layout_constraintTop_toBottomOf="@id/time_taken_textview" />

    <TextView
        android:id="@+id/trie_numberview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="5"
        android:textSize="25sp"
        android:textColor="#ffff"
        app:layout_constraintEnd_toEndOf="@id/time_taken_numberview"
        app:layout_constraintTop_toBottomOf="@id/time_taken_numberview" />

    <Button
        android:id="@+id/play_again_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Play Again"
        android:textSize="15sp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/quit_to_menu_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Menu"
        android:textSize="15sp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>